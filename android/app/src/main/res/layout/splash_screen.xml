<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-100dp"
        android:src="@drawable/splash"
        android:contentDescription="Bank Muamalat Logo" />

    <!-- App Title -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="BMMB Pajak Gadai-I"
        android:textColor="#FE8000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/app_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Sistem e-Lelong"
        android:textColor="#666666"
        android:textSize="15sp" />

    <!-- Progress Bar Container -->
    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="313dp"
        android:layout_height="8dp"
        android:layout_below="@id/app_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="#E6E6E6"
        android:orientation="horizontal">

        <!-- Progress Bar Fill (80% width to match iOS) -->
        <View
            android:id="@+id/progress_fill"
            android:layout_width="250.4dp"
            android:layout_height="match_parent"
            android:background="#FE8000" />

    </LinearLayout>

    <!-- Loading Text -->
    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Loading..."
        android:textColor="#999999"
        android:textSize="14sp" />

</RelativeLayout>
